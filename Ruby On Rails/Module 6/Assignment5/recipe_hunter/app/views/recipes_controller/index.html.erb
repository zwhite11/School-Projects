<h1>Recipes with <%= @ingredient.capitalize%> </h1>

<table border='1'>
	<tr>
		<th></th>
		<th>Title</th>
		<th>Ingredients</th>
	</tr>

	<% @recipes.each do |recipe| %>
	<tr class = "<%= cycle('even','odd')%>">
		<td><%= link_to( image_tag(recipe["thumbnail"]), recipe["href"] )%></td>
		<td><%= link_to(sanitize(recipe["title"]), recipe["href"]) %></td>
		<td><%= recipe["ingredients"] %></td>

	</tr>
	<% end %>

</table>



